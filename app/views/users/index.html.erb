<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate %>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user %>
      <% if current_user.admin? && !current_user?(user) %>
      | <%= link_to "DeleteUser", user, method: :delete, data: {confirm: "Are you sure?"} %>
      <%end%>
    </li>
  <% end %>
<%= will_paginate %>
</ul>